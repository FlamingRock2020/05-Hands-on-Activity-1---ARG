<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="Swap and Check"
        android:textColor="#E1BEE7"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <EditText
            android:id="@+id/txtField1"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="50sp"
            android:gravity="left"
            android:hint="Enter a text..."
            android:inputType="text" />

        <EditText
            android:id="@+id/txtField2"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:hint="Enter a text..."
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:layout_marginLeft="10sp"
            android:inputType="text"
            android:layout_below="@+id/txtField1"
            />

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="50sp"
            android:layout_toRightOf="@+id/txtField1"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="Swap"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="110sp"
            android:layout_toEndOf="@+id/txtField2"
            android:backgroundTint="@color/design_default_color_primary"
            android:text="check"
            android:textColor="@color/black" />


    </RelativeLayout>

</RelativeLayout>